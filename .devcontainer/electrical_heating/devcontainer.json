{
  "name": "electrical_heating",
  "dockerComposeFile": [
    "../../.docker/docker-compose.yml"
  ],
  "service": "electrical_heating",
  "shutdownAction": "none",
  "workspaceFolder": "/workspace/source/electrical_heating",
  "postStartCommand": "uv sync --cache-dir '/workspace/.uv_cache' && uv run pre-commit install && uv run pre-commit install --hook-type commit-msg",
  "containerEnv": {
    "UV_CACHE_DIR": "/workspace/.uv_cache",
    "UV_PROJECT_ENVIRONMENT": "/workspace/.venv"
  },
  "mounts": [
    // Persist the command history across container restarts - useful for bash history
    "source=electrical_heating-bashhistory,target=/commandhistory,type=volume",
    // Mount the SSH keys for Git - allows you to clone private repositories via ssh
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
    // Mount the local system cache directory - speeds up the build process
    "source=${localEnv:HOME}/.cache,target=/home/vscode/.cache,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.mypy-type-checker",
        "charliermarsh.ruff",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "ms-python.python",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "git.openRepositoryInParentFolders": "always", // Open the repository in the parent folder
        "files.eol": "\n", // Use LF line endings
        "editor.tabSize": 2,
        "editor.rulers": [
          120
        ],
        "editor.formatOnSave": true,
        "ruff.lineLength": 120,
        "ruff.lint.run": "onSave",
        "python.terminal.activateEnvInCurrentTerminal": true,
        "python.defaultInterpreterPath": "/workspace/.venv/bin/python",
        "python.testing.pytestArgs": [
          "tests"
        ],
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "github.copilot.editor.enableAutoCompletions": true,
        "python.languageServer": "Pylance", // Use Pylance as the language server        
        "python.analysis.languageServerMode": "full", // Use the full language server mode
        "python.analysis.autoFormatStrings": true, // Automatically format strings
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "always" // Run the Ruff formatter on save
          }
        },
        "terminal.integrated.inheritEnv": true,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          },
          "fish": {
            "path": "fish"
          },
          "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
          },
          "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
          }
        }
      }
    }
  }
}